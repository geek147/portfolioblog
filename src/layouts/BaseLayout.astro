---
import { ViewTransitions } from 'astro:transitions';
import BaseHead, { type Props as HeadProps } from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';

export type Props = HeadProps & { showHeader?: boolean };

const { showHeader = true, ...head } = Astro.props;
---

<!doctype html>
<html lang="en" class="antialiased break-words">
    <head>
    
        <BaseHead {...head} />
        <script>
            if (localStorage.theme === 'dark') {
                document.documentElement.classList.add('dark');
            }
        </script>
        <style>
            .script-container {
                position: fixed;
                top: 0;
                left: 50%;
                z-index: 1000; /* Ensure it's on top of other elements */
                width: 468px; /* Width of the iframe */
                height: 60px; /* Height of the iframe */
            }
        </style>
         <script type="text/javascript">
            atOptions = {
                'key' : 'f1f2f98201a2d43b674431fccfde5ec6',
                'format' : 'iframe',
                'height' : 60,
                'width' : 468,
                'params' : {}
            };
            </script>
        <ViewTransitions />
    </head>
    <body class="bg-main text-main">
        <div class="script-container">
           
            <script type="text/javascript" src="//www.topcreativeformat.com/f1f2f98201a2d43b674431fccfde5ec6/invoke.js"></script>
        </div>
        <div class="flex flex-col min-h-screen px-4 md:px-8">
           
            <Nav />
            {showHeader && <Header />}
            <main class="grow w-full max-w-3xl mx-auto">
                <slot />
            </main>
            
            <Footer />
        </div>
    </body>
</html>
